<Page x:Class="DataBaseReq.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBaseReq.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid Background="#8700D6">
        <TextBlock x:Name="HelloTextBlock" Text="Здраствуйте, " Margin="15" HorizontalAlignment="Center" FontSize="30" FontFamily="Cambria Math" Foreground="White"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Ваша история посещений: " FontSize="20" FontFamily="Cambria Math" Foreground="White"/>
            <TextBlock x:Name="EntryHistoryTextBlock" FontSize="10" FontFamily="Cambria Math" Foreground="White"/>
        </StackPanel>

        <Button x:Name="BackButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="35" Width="130" Content="Назад" Background="#6E02F5" Foreground="White" FontFamily="Cambria Math" Margin="20" FontSize="20" Click="BackButton_Click"/>
    </Grid>
</Page>
