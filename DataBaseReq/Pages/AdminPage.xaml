<Page x:Class="DataBaseReq.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBaseReq.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="#8700D6">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AddUserButton" Height="30" Content="Добавить пользователя" Background="#6E02F5" Foreground="White" FontFamily="Cambria Math" Margin="5" FontSize="15" Click="AddUserButton_Click"/>
            <Button x:Name="EdtUserButton" Height="30" Content="Редактировать пользователя" Background="#6E02F5" Foreground="White" FontFamily="Cambria Math" Margin="5" FontSize="15"/>
            <Button x:Name="ViewUserButton" Height="30" Content="Посмотреть всех пользователей" Background="#6E02F5" Foreground="White" FontFamily="Cambria Math" Margin="5" FontSize="15"/>
        </StackPanel>
        <Button x:Name="BackButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="35" Width="130" Content="Назад" Background="#6E02F5" Foreground="White" FontFamily="Cambria Math" Margin="20" FontSize="20" Click="BackButton_Click"/>
    </Grid>
</Page>
